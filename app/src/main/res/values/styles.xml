<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>


    <style name="ObjectivelyRadical">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">#c3d5ff</item>
        <item name="android:onClick">showToast</item>
    </style>

    <style name="buttonSpacing">
        <item name="android:layout_width">@dimen/button_horizontal_space</item>
        <item name="android:layout_height">@dimen/button_vertical_space</item>
    </style>

</resources>